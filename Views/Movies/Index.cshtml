@model WebApplication1.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .moveColor {
        background-color: lightblue;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Star)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="items">
        @foreach (var item in Model.Movies)
        {
        <tr data-id="@Html.DisplayFor(modelItem => item.Id)">
            <td>
                @Html.DisplayFor(modelItem => item.Star)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Copy" asp-route-id="@item.Id">Copy</a>
            </td>
        </tr>
        }
    </tbody>
</table>


<script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js" defer></script>
<script>
    let sortable; // 拖拉表格
    window.onload = () => {
        // 拖拉表格功能
        let el = document.getElementById('items');
        sortable = Sortable.create(el, {
            animation: 250,
            ghostClass: 'moveColor',
            // handle: '.orderBtn',
            onEnd: orderItem
        });
    };

    function orderItem() {
        console.log(sortable.toArray());

        $.ajax({
            type: 'POST',
            url: 'Movies/order',
            data: {
                list: sortable.toArray()
            },
            dataType: 'json',
            success: function (jData) {
                console.log("ajax success");
                console.log(jData);
                if (jData == 'success') {
                    location.reload();
                }
            },
            error: function (errorMsg) {
                console.log("ajax error");
                console.log(errorMsg);
            }
        });
    }
</script>